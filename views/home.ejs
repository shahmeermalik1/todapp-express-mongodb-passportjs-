<body>
    <h1>this is the homepage of the todo list app</h1>
    

    <!-- add task form starts here -->
    <div class="container-fluid">
        <div class="row">
            <form method="post" action="/list" >
                <div class="mb-3 col-4">
                  <label for="exampleInputEmail1" class="form-label">Add Task</label>
                  <input type="list" class="form-control" id="list" name="list" aria-describedby="emailHelp">
                  <label for="exampleInputEmail1" class="form-label">start time</label>
                  <input type="time" class="form-control" id="startTime" name="startTime" aria-describedby="emailHelp">
                  <label for="exampleInputEmail1" class="form-label">End Time</label>
                  <input type="time" class="form-control" id="endTime" name="endTime" aria-describedby="emailHelp">
                  
                </div>
                
                <button type="submit" value="addTask" class="btn btn-primary">Submit</button>
              </form>
            
        </div>
    </div>
    <!-- add task form ends here -->
